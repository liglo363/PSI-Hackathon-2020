             x:Class="App.MainPage">

    <NavigationPage.TitleView>
    <Label Text="Dashboard" TextColor="AntiqueWhite" FontSize="35"/>
    </NavigationPage.TitleView>
    
    <ContentPage.Content>
        <StackLayout Margin="20,35,20,20">
            <Button Text="Classes" BackgroundColor="LightGreen" FontSize="25" Clicked="Classes_Button_Clicked"/>
